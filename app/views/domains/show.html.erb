<div class="row">
  <div class="col-md-6">
    <h1><%= @domain.name %></h1>

    <h2>Traffic Rank: <%= @domain.last_rank.traffic_rank %></h2>
  </div>
  <h2>Historical Chart</h2>

  <div class="col-md-6">
    <%= line_chart(@data, @options) %>
  </div>
</div>
<table class="table table-striped">
  <tr>
    <th>Traffic Rank</th>
    <th>Logged</th>
  </tr>
  <% @domain.ranks.each do |rank| %>
    <tr>
      <td><%= rank.traffic_rank %></td>
      <td><%= "#{time_ago_in_words(rank.created_at)} ago" %></td>
    </tr>
  <% end %>
</table>